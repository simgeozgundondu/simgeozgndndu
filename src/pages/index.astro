                            target="_blank"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.87 8.17 6.84 9.49.5.09.68-.22.68-.48v-1.7c-2.78.6-3.37-1.34-3.37-1.34-.46-1.18-1.12-1.5-1.12-1.5-.92-.62.07-.61.07-.61 1.02.07 1.55 1.04 1.55 1.04.91 1.53 2.37 1.09 2.95.84.09-.66.36-1.1.65-1.35-2.22-.25-4.55-1.11-4.55-4.93 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.28.1-2.67 0 0 .85-.27 2.78 1.02A9.8 9.8 0 0112 7.95a9.8 9.8 0 012.53.34c1.92-1.28 2.77-1.02 2.77-1.02.56 1.39.21 2.42.1 2.67.64.7 1.03 1.59 1.03 2.68 0 3.83-2.33 4.68-4.56 4.93.37.32.7.93.7 1.87v2.77c0 .27.18.58.69.48A9.992 9.992 0 0022 12c0-5.52-4.48-10-10-10z"
