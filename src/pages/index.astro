---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
---

<Layout
    lang="tr"
    title="Simge Özgündöndü"
    description="Simge Özgündöndü | developer"
>
    <!-- About Section -->
    <section
        class="my-28 py-12 bg-white flex flex-col justify-center items-center md:flex-row md:space-x-10"
    >
        <div
            class="w-[300px] h-[300px] rounded-full overflow-hidden mb-6 md:mb-0"
        >
            <img
                src="../../public/person.png"
                alt="Profile"
                class="object-cover h-full w-full"
            />
        </div>
        <div class="text-center md:text-left">
            <h1 class="text-6xl font-bold mb-4">Hello</h1>
            <p class="text-gray-700 text-lg mb-4">
                A Bit About Me. I’m a developer who enjoys building creative and
                impactful solutions.
            </p>
            <div class="flex justify-center space-x-4">
                <a
                    href="/resume"
                    class="bg-[#A35151] text-white px-4 py-2 rounded-full shadow-lg"
                    >Resume</a
                >
                <a
                    href="/projects"
                    class="bg-[#ffa726] text-white px-4 py-2 rounded-full shadow-lg"
                    >Projects</a
                >
                <a
                    href="#contact"
                    class="bg-[#49796b] text-white px-4 py-2 rounded-full shadow-lg"
                    >Contact</a
                >
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section
        class="text-white py-12 bg-gray-100 flex flex-col justify-center items-center"
    >
        <div
            class="max-w-[900px] w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 text-center"
        >
            <div
                class="bg-[#49796b] rounded-lg p-6 shadow-md transition-transform hover:scale-110"
            >
                <div class="flex justify-center items-center mb-4">
                    <img src="../../public/phone.png" class="w-8 bg-white rounded-full" alt="">
                </div>
                <a href="#" class="hover:underline"
                    >+90 551 128 35 46</a
                >
            </div>
            <div
                class="bg-[#49796b] rounded-lg p-6 shadow-md transition-transform hover:scale-110"
            >
                <div class="flex justify-center items-center mb-4">
                    <img src="../../public/mail.png" class="w-8 bg-white rounded-full" alt="">
                </div>
                <a
                    href="mailto:simgeozgundondu@gmail.com"
                    class="hover:underline">simgeozgundondu@gmail.com</a
                >
            </div>
            <div
                class="bg-[#49796b] rounded-lg p-6 shadow-md transition-transform hover:scale-110"
            >
                    
                    <div class="flex flex-row space-x-4 m-4 items-center justify-center ">
                        <a
                            href="https://www.linkedin.com/in/simge-ozgundondu/"
                            class="flex items-center space-x-2 text-white hover:underline transition-transform hover:scale-110 "
                            target="_blank"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M19 0H5C2.24 0 0 2.24 0 5v14c0 2.76 2.24 5 5 5h14c2.76 0 5-2.24 5-5V5c0-2.76-2.24-5-5-5zm-7.53 19.08H9.01v-7.08h2.46v7.08zm-1.23-8.08H9V9.58h2.47v1.42zm10.07 8.08h-2.46v-3.71c0-.9-.02-2.06-1.25-2.06-1.26 0-1.46 1.02-1.46 2v3.77h-2.46V9.58h2.36v1.3h.03c.33-.63 1.13-1.3 2.33-1.3 2.49 0 2.95 1.63 2.95 3.75v5.75z"
